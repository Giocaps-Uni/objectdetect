<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/labeler_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:autoSizeTextType="uniform"
            android:text="@string/app_title"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_explain"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="uniform"
            android:text="@string/app_explain"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_labeler"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="none"
            android:background="@drawable/buttons_style"
            android:text="@string/go_to_labeler"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/gotodatabase"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="none"
            android:background="@drawable/buttons_style"
            android:text="@string/action_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

</FrameLayout>