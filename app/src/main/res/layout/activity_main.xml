<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:autoSizeTextType="uniform"
            android:text="@string/app_title"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/database_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:autoSizeTextType="uniform"
            android:text="@string/database_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/database_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="uniform"
            android:text="@string/database_legend_text"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/app_explain"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="uniform"
            android:text="@string/app_explain"
            android:textAlignment="center"
            android:textSize="24sp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph"
            tools:layout="@layout/fragment_buttons" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>